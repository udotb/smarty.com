{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "ESNext",
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowJs": true
  },
  "include": [
    "./src//*.ts",
    "./test//.ts",
    "./types/**/.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "static"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
